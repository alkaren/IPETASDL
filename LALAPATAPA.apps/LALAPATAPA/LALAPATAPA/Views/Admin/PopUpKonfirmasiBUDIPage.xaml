<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage
    xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LALAPATAPA.Views.Admin.PopUpKonfirmasiBUDIPage">
    <StackLayout Padding="20,10,20,10" VerticalOptions="Center" HorizontalOptions="Center">
        <Frame VerticalOptions="Center" CornerRadius="10" BackgroundColor="White" HasShadow="True">
            <StackLayout Padding="10,10,10,10">
                <Label Margin="0,0,0,10" HorizontalOptions="Center" VerticalOptions="Center" Text="Apakah anda yakin&#x0a;pembayaran sudah&#x0a;dilakukan?" TextColor="Black" HorizontalTextAlignment="Center" FontSize="25"></Label>
                <Button Margin="20,0,-10,-20" VerticalOptions="Center" CornerRadius="10" Clicked="OnIya_Clicked" Text="Ya" HorizontalOptions="Start" TextColor="White" HeightRequest="50" BackgroundColor="#33B872"></Button>
                <Button Margin="-10,-35,10,0" VerticalOptions="Center" CornerRadius="10" Clicked="OnTidak_Clicked" Text="Tidak" HorizontalOptions="End" TextColor="White" HeightRequest="50" BackgroundColor="#D13333"></Button>
            </StackLayout>
        </Frame>
    </StackLayout>
</pages:PopupPage>