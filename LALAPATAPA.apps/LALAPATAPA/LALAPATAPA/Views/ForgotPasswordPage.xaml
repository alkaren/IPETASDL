<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Name="LupaPage" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Controls="clr-namespace:LALAPATAPA.Controls"
             x:Class="LALAPATAPA.Views.ForgotPasswordPage"
             Title="Lupa Password" BackgroundColor="White">
    <StackLayout Padding="20,10,20,10" VerticalOptions="Start">
        <StackLayout Padding="0,15,0,30">
            <Label HorizontalOptions="Start" Text="Hi, Mari kami&#x0a;bantu pulihkan&#x0a;akun anda" TextColor="#33B872" HorizontalTextAlignment="Start" FontSize="28"></Label>
        </StackLayout>
        <Frame VerticalOptions="Center" CornerRadius="10" BackgroundColor="Transparent" BorderColor="#33B872">
            <Controls:XEntry x:Name="txtEmailUser" Keyboard="Email" Margin="-5,-15,-10,-15" TextColor="Black" PlaceholderColor="Default" Placeholder="Email" VerticalOptions="Center"></Controls:XEntry>
        </Frame>
        <StackLayout Padding="0,25,0,0">
            <Button VerticalOptions="End" CornerRadius="10" Clicked="OnPulihkan_Clicked" Text="Pulihkan" TextColor="White" HeightRequest="50" BackgroundColor="#33B872"></Button>
            <Button VerticalOptions="End" CornerRadius="10" Clicked="OnBack_Clicked" Text="Kembali" TextColor="White" HeightRequest="50" BackgroundColor="#33B872"></Button>
        </StackLayout>
    </StackLayout>
</ContentPage>